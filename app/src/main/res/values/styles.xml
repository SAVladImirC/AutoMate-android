<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gin_color</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="LanguageButtonsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_blue_button_big</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TutorialButtonsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:background">@drawable/ic_button_white</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="DoneTutorialButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:background">@drawable/ic_button_white</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomBarButtonCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/BottomBarButtonCardViewCorners</item>
    </style>


    <style name="BottomBarButtonCardViewCorners" parent="">
        <item name="cornerSizeTopRight">45dp</item>
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>